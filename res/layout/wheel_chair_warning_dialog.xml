<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/more_transit" android:padding="15.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/WHEEL_CHAIR_WARNING" android:layout_centerHorizontal="true" />
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/ok_btn" android:padding="15.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Ok" android:layout_weight="1.0" />
                <Button android:id="@+id/re_route_btn" android:padding="15.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Re-route" android:layout_weight="1.0" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>